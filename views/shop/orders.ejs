<main>
    <% if(orders.length <=0 ) {%>
<h1>No Orders</h1>

    <%}else {%>
        <ul>
            
        <% orders.forEach(order => { %>
                <li>
            
                    <h1><%=order._id %> - <a href="/order/<%=order._id%>"> Invoice </a></h1>
                    <ul>
                        <% order.products.forEach(p => { %>

                            <li><%=p.product.title %> (<%=p.quantity%>) </li>
                       <% })%>
                        
                    </ul>
                </li>
            

        <%})%>
        </ul>

    <%}%>
</main>
